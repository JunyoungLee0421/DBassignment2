<%- include("templates/header") %>
    <div id="chatroom">
        <div id="chatbox">
            <h2>Chat room</h2>
            <div id="messageheader">
                <p id="current-users">Current users in the group:
                    <% for (var i=0; i < members.length; i++) { %>
                        <span>
                            <%= members[i].username %>
                        </span>
                        <% } %>
                </p>
                <a href="/inviteMember/<%=room_id%>"><button>Invite</button></a>
                <!-- <form action='/invite' method='post'>
                    <button>Invite</button>
                </form> -->
            </div>
            <div id="messagebox">
                <% for (var i=0; i < messages.length; i++) { %>
                    <% if (messages[i].user_id==user_id) { %>
                        <div class="my_message_wrapper">
                            <div class="my_message_column">
                                <div class="message_info">
                                    <%= messages[i].username %>
                                        (<%= messages[i].timeAgo %>)
                                </div>
                                <p class="message your-message">
                                    <%= messages[i].text %>
                                </p>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="other_message_wrapper">
                                <div class="other_message_column">
                                    <div class="message_info">
                                        <%=messages[i].username%>
                                            (<%= messages[i].timeAgo %>)
                                    </div>
                                    <p class="message others-message">
                                        <%= messages[i].text %>
                                    </p>
                                </div>
                            </div>

                            <% } %>
                                <% } %>
            </div>

            <form action='/sendText' method='post'>
                <input type="hidden" name="room_id" value="<%=room_id%>">
                <input name='text' type='text' placeholder='Enter text...'>
                <button>Send Message</button>
            </form>
        </div>
    </div>
    <form action='/home' method='post'>
        <button>Go to Home</button>
    </form>
    <form action='/logout' method='post'>
        <button>Logout</button>
    </form>
    <%- include("templates/footer") %>